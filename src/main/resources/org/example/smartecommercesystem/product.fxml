<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.smartecommercesystem.controller.ProductController"
      style="-fx-background-color: #f5f5f5;" spacing="0.0">
    <children>
        <!-- Header Bar -->
        <HBox alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 1);" spacing="15.0">
            <padding><Insets bottom="15.0" left="25.0" right="25.0" top="15.0"/></padding>
            <children>
                <Label text="Products" style="-fx-text-fill: #2c3e50;">
                    <font><Font name="System Bold" size="20.0"/></font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Button mnemonicParsing="false" onAction="#goBack" text="â† Go Back"
                        style="-fx-background-color: #ecf0f1; -fx-text-fill: #2c3e50; -fx-background-radius: 6; -fx-padding: 8 16; -fx-cursor: hand; -fx-font-weight: 600;">
                    <font><Font size="13.0"/></font>
                </Button>
            </children>
        </HBox>

        <!-- Main Scroll Area -->
        <ScrollPane fitToWidth="true" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER"
                    style="-fx-background-color: transparent; -fx-background: transparent;" VBox.vgrow="ALWAYS">
            <content>
                <VBox spacing="20.0" style="-fx-background-color: #f5f5f5;">
                    <padding><Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/></padding>
                    <children>
                        <!-- Products Table Card -->
                        <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
                            <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/></padding>
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label text="Product Inventory" style="-fx-text-fill: #2c3e50; -fx-font-weight: 600;">
                                            <font><Font size="16.0"/></font>
                                        </Label>
                                        <Region HBox.hgrow="ALWAYS"/>
                                        <Button mnemonicParsing="false" onAction="#addToCart" text="ðŸ›’ Add to Cart"
                                                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 8 16; -fx-cursor: hand; -fx-font-weight: 600;">
                                            <font><Font size="12.0"/></font>
                                        </Button>
                                    </children>
                                </HBox>

                                <!-- Sorting Controls -->
                                <HBox spacing="15.0" alignment="CENTER_LEFT">
                                    <children>
                                        <Label text="Sort by:" style="-fx-text-fill: #2c3e50; -fx-font-weight: 600;">
                                            <font><Font size="12.0"/></font>
                                        </Label>
                                        <ComboBox fx:id="sortByCombo" prefWidth="120.0"
                                                  style="-fx-background-color: #f8f9fa; -fx-background-radius: 6; -fx-border-color: #e0e0e0; -fx-border-radius: 6;"/>
                                        <Label text="Order:" style="-fx-text-fill: #2c3e50; -fx-font-weight: 600;">
                                            <font><Font size="12.0"/></font>
                                        </Label>
                                        <ComboBox fx:id="sortOrderCombo" prefWidth="120.0"
                                                  style="-fx-background-color: #f8f9fa; -fx-background-radius: 6; -fx-border-color: #e0e0e0; -fx-border-radius: 6;"/>
                                        <Button mnemonicParsing="false" onAction="#sortProducts" text="Apply Sort"
                                                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 8 16; -fx-cursor: hand; -fx-font-weight: 600;">
                                            <font><Font size="12.0"/></font>
                                        </Button>
                                    </children>
                                </HBox>

                                <!-- Product Table -->
                                <TableView fx:id="productTable" style="-fx-background-color: transparent; -fx-border-color: #e0e0e0; -fx-border-radius: 6; -fx-border-width: 1;" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID"/>
                                        <TableColumn fx:id="nameColumn" prefWidth="120.0" text="Name"/>
                                        <TableColumn fx:id="priceColumn" prefWidth="90.0" text="Price"/>
                                        <TableColumn fx:id="stockColumn" prefWidth="80.0" text="Stock"/>
                                        <TableColumn fx:id="categoryColumn" prefWidth="110.0" text="Category"/>
                                        <TableColumn fx:id="dateColumn" prefWidth="120.0" text="Upload Date"/>
                                        <TableColumn fx:id="editColumn" prefWidth="80.0" text="Edit"/>
                                        <TableColumn fx:id="deleteColumn" prefWidth="80.0" text="Delete"/>
                                    </columns>
                                </TableView>
                            </children>
                        </VBox>

                        <!-- Add/Edit Product Form Card -->
                        <VBox spacing="18.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
                            <padding><Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/></padding>
                            <children>
                                <Label text="Add / Edit Product" style="-fx-text-fill: #2c3e50; -fx-font-weight: 600;">
                                    <font><Font size="16.0"/></font>
                                </Label>

                                <!-- First Row: Name and Price -->
                                <HBox spacing="15.0" alignment="CENTER_LEFT">
                                    <children>
                                        <VBox spacing="6.0" HBox.hgrow="ALWAYS">
                                            <children>
                                                <Label text="Product Name" style="-fx-text-fill: #2c3e50; -fx-font-weight: 600;">
                                                    <font><Font size="12.0"/></font>
                                                </Label>
                                                <TextField fx:id="productName" promptText="Enter product name"
                                                           maxWidth="Infinity" prefHeight="38.0"
                                                           style="-fx-background-color: #f8f9fa; -fx-background-radius: 6; -fx-border-color: #e0e0e0; -fx-border-radius: 6; -fx-padding: 10;"/>
                                            </children>
                                        </VBox>

                                        <VBox spacing="6.0" HBox.hgrow="ALWAYS">
                                            <children>
                                                <Label text="Price (Rwf)" style="-fx-text-fill: #2c3e50; -fx-font-weight: 600;">
                                                    <font><Font size="12.0"/></font>
                                                </Label>
                                                <TextField fx:id="price" promptText="0.00" maxWidth="Infinity" prefHeight="38.0"
                                                           style="-fx-background-color: #f8f9fa; -fx-background-radius: 6; -fx-border-color: #e0e0e0; -fx-border-radius: 6; -fx-padding: 10;"/>
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>

                                <!-- Second Row: Stock and Category -->
                                <HBox spacing="15.0" alignment="CENTER_LEFT">
                                    <children>
                                        <VBox spacing="6.0" HBox.hgrow="ALWAYS">
                                            <children>
                                                <Label text="Stock Quantity" style="-fx-text-fill: #2c3e50; -fx-font-weight: 600;">
                                                    <font><Font size="12.0"/></font>
                                                </Label>
                                                <TextField fx:id="stock" promptText="0" maxWidth="Infinity" prefHeight="38.0"
                                                           style="-fx-background-color: #f8f9fa; -fx-background-radius: 6; -fx-border-color: #e0e0e0; -fx-border-radius: 6; -fx-padding: 10;"/>
                                            </children>
                                        </VBox>

                                        <VBox spacing="6.0" HBox.hgrow="ALWAYS">
                                            <children>
                                                <Label text="Category" style="-fx-text-fill: #2c3e50; -fx-font-weight: 600;">
                                                    <font><Font size="12.0"/></font>
                                                </Label>
                                                <ComboBox fx:id="categoryComboBox" maxWidth="Infinity" prefHeight="38.0"
                                                          promptText="Select category"
                                                          style="-fx-background-color: #f8f9fa; -fx-background-radius: 6; -fx-border-color: #e0e0e0; -fx-border-radius: 6;"/>
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>

                                <!-- Submit Button -->
                                <Button mnemonicParsing="false" onAction="#addProduct" prefHeight="42.0" maxWidth="250.0"
                                        text="Add / Edit Product"
                                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-size: 14px; -fx-font-weight: bold; -fx-cursor: hand;">
                                    <font><Font name="System Bold" size="14.0"/></font>
                                </Button>
                            </children>
                        </VBox>

                        <!-- ===== Reviews Section ===== -->
                        <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8,0,0,2);">
                            <padding><Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/></padding>
                            <children>
                                <Label text="Reviews" style="-fx-text-fill: #2c3e50; -fx-font-weight: 600;">
                                    <font><Font size="16.0"/></font>
                                </Label>

                                <!-- Add Review Row -->
                                <HBox spacing="10.0" alignment="CENTER_LEFT">
                                    <children>
                                        <ComboBox fx:id="ratingCombo" promptText="Rating" prefWidth="80"/>
                                        <TextField fx:id="commentField" promptText="Write a comment..." HBox.hgrow="ALWAYS"/>
                                        <Button text="Add Review" onAction="#addReview"
                                                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 8 16; -fx-font-weight: bold;"/>
                                    </children>
                                </HBox>

                                <!-- Reviews Table -->
                                <TableView fx:id="reviewTable" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="reviewIdColumn" text="ID" prefWidth="50"/>
                                        <TableColumn fx:id="userIdColumn" text="User ID" prefWidth="80"/>
                                        <TableColumn fx:id="ratingColumn" text="Rating" prefWidth="60"/>
                                        <TableColumn fx:id="commentColumn" text="Comment" prefWidth="250"/>
                                        <TableColumn fx:id="reviewDateColumn" text="Date" prefWidth="120"/>
                                        <TableColumn fx:id="reviewDeleteColumn" text="Delete" prefWidth="80"/>
                                    </columns>
                                </TableView>
                            </children>
                        </VBox>

                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</VBox>
