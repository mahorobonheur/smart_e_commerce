<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.example.smartecommercesystem.controller.CartController"
           style="-fx-background-color: #f5f5f5;">

    <children>
        <ScrollPane fitToWidth="true"
                    vbarPolicy="AS_NEEDED"
                    hbarPolicy="NEVER"
                    style="-fx-background-color: transparent; -fx-background: transparent;">

            <content>
                <StackPane minWidth="300" prefWidth="900">
                    <padding>
                        <Insets top="30" right="20" bottom="30" left="20"/>
                    </padding>

                    <children>
                        <!-- Main Card -->
                        <VBox spacing="20"
                              maxWidth="800"
                              minWidth="300"
                              style="-fx-background-color: white;
                                     -fx-background-radius: 10;
                                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                            <padding>
                                <Insets top="30" right="25" bottom="30" left="25"/>
                            </padding>

                            <children>

                                <!-- Header -->
                                <HBox alignment="CENTER_LEFT" spacing="15">
                                    <children>
                                        <Label text="Cart"
                                               style="-fx-text-fill: #2c3e50;">
                                            <font>
                                                <Font name="System Bold" size="22"/>
                                            </font>
                                        </Label>

                                        <Region HBox.hgrow="ALWAYS"/>

                                        <Label fx:id="totalLabel"
                                               style="-fx-text-fill: #27ae60;
                                                      -fx-font-weight: bold;">
                                            <font>
                                                <Font size="14"/>
                                            </font>
                                        </Label>

                                        <Button text="Go Back"
                                                onAction="#goBack"
                                                style="-fx-background-color: #bdc3c7;
                                                       -fx-text-fill: #2c3e50;
                                                       -fx-background-radius: 6;
                                                       -fx-font-weight: bold;
                                                       -fx-cursor: hand;"
                                                prefHeight="32"/>
                                    </children>
                                </HBox>

                                <Separator/>

                                <!-- TableView -->
                                <TableView fx:id="cartTable"
                                           VBox.vgrow="ALWAYS"
                                           style="-fx-background-radius: 6;
                                                  -fx-border-radius: 6;
                                                  -fx-border-color: #e0e0e0;">
                                    <columns>
                                        <TableColumn fx:id="productColumn"
                                                     text="Product"
                                                     prefWidth="200"/>
                                        <TableColumn fx:id="quantityColumn"
                                                     text="Quantity"
                                                     prefWidth="80"/>
                                        <TableColumn fx:id="priceColumn"
                                                     text="Price"
                                                     prefWidth="120"/>
                                        <TableColumn fx:id="totalColumn"
                                                     text="Total"
                                                     prefWidth="120"/>
                                    </columns>
                                </TableView>

                                <!-- Buttons -->
                                <HBox spacing="15" alignment="CENTER_RIGHT">
                                    <children>
                                        <Button text="Remove From Cart"
                                                onAction="#removeFromCart"
                                                style="-fx-background-color: #e74c3c;
                                                       -fx-text-fill: white;
                                                       -fx-background-radius: 6;
                                                       -fx-font-weight: bold;
                                                       -fx-cursor: hand;"
                                                prefHeight="38"/>

                                        <Button text="Place Order"
                                                onAction="#placeOrder"
                                                style="-fx-background-color: #3498db;
                                                       -fx-text-fill: white;
                                                       -fx-background-radius: 6;
                                                       -fx-font-weight: bold;
                                                       -fx-cursor: hand;"
                                                prefHeight="38"/>
                                    </children>
                                </HBox>

                            </children>
                        </VBox>
                    </children>
                </StackPane>
            </content>
        </ScrollPane>
    </children>
</StackPane>
