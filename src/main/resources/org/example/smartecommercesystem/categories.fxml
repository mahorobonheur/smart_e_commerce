<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.example.smartecommercesystem.controller.CategoryController"
           style="-fx-background-color: #f5f5f5;">

    <children>
        <ScrollPane fitToWidth="true"
                    vbarPolicy="AS_NEEDED"
                    hbarPolicy="NEVER"
                    style="-fx-background-color: transparent;">
            <content>

                <StackPane prefWidth="900" minWidth="300">
                    <padding>
                        <Insets top="30" right="20" bottom="30" left="20"/>
                    </padding>

                    <children>

                        <!-- MAIN CARD -->
                        <VBox spacing="20"
                              maxWidth="800"
                              minWidth="300"
                              style="-fx-background-color: white;
                                     -fx-background-radius: 10;
                                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                            <padding>
                                <Insets top="30" right="25" bottom="30" left="25"/>
                            </padding>

                            <children>

                                <!-- HEADER -->
                                <HBox alignment="CENTER_LEFT" spacing="15">
                                    <children>
                                        <Label text="Categories" style="-fx-text-fill: #2c3e50;">
                                            <font>
                                                <Font name="System Bold" size="22"/>
                                            </font>
                                        </Label>

                                        <Region HBox.hgrow="ALWAYS"/>

                                        <Button text="Go Back"
                                                onAction="#goBack"
                                                prefHeight="32"
                                                style="-fx-background-color: #bdc3c7;
                                                       -fx-text-fill: #2c3e50;
                                                       -fx-background-radius: 6;
                                                       -fx-cursor: hand;"/>
                                    </children>
                                </HBox>

                                <Separator/>

                                <!-- SORTING -->
                                <HBox spacing="15" alignment="CENTER_LEFT">
                                    <children>
                                        <Label text="Sort by"
                                               style="-fx-text-fill: #2c3e50; -fx-font-weight: 600;">
                                            <font>
                                                <Font size="13"/>
                                            </font>
                                        </Label>

                                        <ComboBox fx:id="sortBox"
                                                  prefWidth="220"
                                                  promptText="Choose sorting"
                                                  style="-fx-background-color: #f8f9fa;
                                                         -fx-background-radius: 6;
                                                         -fx-border-color: #e0e0e0;
                                                         -fx-border-radius: 6;"/>
                                    </children>
                                </HBox>

                                <!-- TABLE -->
                                <TableView fx:id="categoriesTable"
                                           VBox.vgrow="ALWAYS"
                                           style="-fx-background-radius: 6;
                                                  -fx-border-radius: 6;
                                                  -fx-border-color: #e0e0e0;">
                                    <columns>
                                        <TableColumn fx:id="idColumn" text="Category ID" prefWidth="150"/>
                                        <TableColumn fx:id="nameColumn" text="Category Name" prefWidth="250"/>
                                        <TableColumn fx:id="editColumn" text="Edit" prefWidth="150"/>
                                        <TableColumn fx:id="deleteColumn" text="Delete" prefWidth="150"/>
                                    </columns>
                                </TableView>

                                <!-- ADD CATEGORY -->
                                <VBox spacing="10">
                                    <children>
                                        <Label text="Add New Category"
                                               style="-fx-text-fill: #2c3e50; -fx-font-weight: 600;">
                                            <font>
                                                <Font size="14"/>
                                            </font>
                                        </Label>

                                        <HBox spacing="15">
                                            <children>
                                                <TextField fx:id="categoryName"
                                                           promptText="Enter category name"
                                                           prefHeight="38"
                                                           HBox.hgrow="ALWAYS"
                                                           style="-fx-background-color: #f8f9fa;
                                                                  -fx-background-radius: 6;
                                                                  -fx-border-color: #e0e0e0;
                                                                  -fx-border-radius: 6;
                                                                  -fx-padding: 10;"/>

                                                <Button text="Add Category"
                                                        onAction="#addCategory"
                                                        prefHeight="38"
                                                        style="-fx-background-color: #3498db;
                                                               -fx-text-fill: white;
                                                               -fx-background-radius: 6;
                                                               -fx-font-weight: bold;
                                                               -fx-cursor: hand;"/>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                            </children>
                        </VBox>
                    </children>
                </StackPane>
            </content>
        </ScrollPane>
    </children>
</StackPane>
